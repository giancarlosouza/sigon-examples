
sensors:
    {name: "positionSensor", implementation: "sensor.PositionSensor"}

actuators:
    {name: "moveUp", implementation: "actuator.MoveUp"},
    {name: "moveFront", implementation: "actuator.MoveFront"},


beliefs(fol):
	position(1,1).

desires(fol):
	position(10,10).

plans(fol):
	//plan(somethingToBeTrue, compoundaction, preconditions, postconditions)
	plan(
		position(10,10),
		[
			action(moveFront(),  not position(10,_), position(_,_)),
			action(moveUp(), not position(_,10), position(_,_))
		]
		,
		position(_,_),
		position(_,_)).